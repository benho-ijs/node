{    
    "compilerOptions": {
        "target": "ESNext",        
        "moduleResolution": "Node",
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "declaration": false,
        "baseUrl": ".",        
        "paths": {
            "@ijstech/node": ["../src"],
            "@ijstech/*": ["*", "../packages/*"]
        }
    },
    "include": [".","package1","package2"]
}